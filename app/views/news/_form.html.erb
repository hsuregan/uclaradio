<%= form_for @new do |f| %>
  <div class="control-group">
    <%= f.label :title %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :content %>
    <div class="controls">
      <%= f.text_area :content, rows: "20", cols: "100" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil %>
    <%= link_to 'Cancel', root_path %>
  </div>
<% end %>